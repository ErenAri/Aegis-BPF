{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/aegisbpf/aegisbpf/blob/main/config/schemas/perf_baseline_v1.json",
  "title": "AegisBPF Canonical Perf Baseline (v1)",
  "description": "Schema for canonical performance baseline artifacts generated by CI.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "schema_semver",
    "generated_at_unix",
    "ci",
    "environment",
    "budgets",
    "microbench",
    "workload_suite",
    "taxonomy",
    "canonical_table",
    "gate"
  ],
  "properties": {
    "schema_version": { "type": "integer", "const": 1 },
    "schema_semver": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at_unix": { "type": "integer", "minimum": 0 },
    "ci": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repository", "workflow", "run_id", "run_url", "ref", "sha"],
      "properties": {
        "repository": { "type": "string" },
        "workflow": { "type": "string" },
        "run_id": { "type": "string" },
        "run_url": { "type": "string" },
        "ref": { "type": "string" },
        "sha": { "type": "string" }
      }
    },
    "environment": { "type": "object" },
    "budgets": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "max_open_delta_pct",
        "max_open_p95_overhead_pct",
        "max_connect_p95_overhead_pct",
        "max_workload_failed_rows"
      ],
      "properties": {
        "max_open_delta_pct": { "type": "number" },
        "max_open_p95_overhead_pct": { "type": "number" },
        "max_connect_p95_overhead_pct": { "type": "number" },
        "max_workload_failed_rows": { "type": "integer", "minimum": 0 }
      }
    },
    "microbench": {
      "type": "object",
      "additionalProperties": false,
      "required": ["open_compare", "open_percentiles", "connect_percentiles"],
      "properties": {
        "open_compare": { "type": "object" },
        "open_percentiles": { "type": "object" },
        "connect_percentiles": { "type": "object" }
      }
    },
    "workload_suite": { "type": "object" },
    "taxonomy": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["category", "scenario", "metric", "source"],
        "properties": {
          "category": { "type": "string" },
          "scenario": { "type": "string" },
          "metric": { "type": "string" },
          "source": { "type": "string" }
        }
      }
    },
    "canonical_table": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["scenario", "metric", "result", "budget", "unit", "status", "evidence"],
        "properties": {
          "scenario": { "type": "string" },
          "metric": { "type": "string" },
          "result": { "type": "number" },
          "budget": { "type": "number" },
          "unit": { "type": "string" },
          "status": { "type": "string", "enum": ["PASS", "FAIL"] },
          "evidence": { "type": "string" }
        }
      }
    },
    "gate": {
      "type": "object",
      "additionalProperties": false,
      "required": ["pass", "failed_rows", "slo_summary_gate_pass"],
      "properties": {
        "pass": { "type": "boolean" },
        "failed_rows": {
          "type": "array",
          "items": { "type": "string" }
        },
        "slo_summary_gate_pass": { "type": "boolean" }
      }
    }
  }
}
