{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Runtime State",
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "aegisbpf_runtime_state{instance=~\"$instance\"}",
          "legendFormat": "{{state}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Ringbuf Drop Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(aegisbpf_ringbuf_drops_total{instance=~\"$instance\"}[5m])",
          "legendFormat": "file"
        },
        {
          "refId": "B",
          "expr": "rate(aegisbpf_net_ringbuf_drops_total{instance=~\"$instance\"}[5m])",
          "legendFormat": "network"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Emergency Toggle Storm Active",
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "aegisbpf_emergency_toggle_storm_active{instance=~\"$instance\"}"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Perf SLO Gate Pass",
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "aegisbpf_perf_slo_gate_pass{instance=~\"$instance\"}"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 8,
        "y": 8
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Perf SLO Failed Rows",
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "aegisbpf_perf_slo_failed_rows{instance=~\"$instance\"}"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 16,
        "y": 8
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": [
    "aegisbpf",
    "runtime-security",
    "ops"
  ],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {
          "text": "Prometheus",
          "value": "Prometheus"
        }
      },
      {
        "name": "instance",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "query": {
          "query": "label_values(aegisbpf_blocks_total, instance)",
          "refId": "instanceQuery"
        },
        "includeAll": true,
        "multi": true,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "title": "AegisBPF Ops Minimal",
  "version": 1
}
